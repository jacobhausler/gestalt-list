{
  "name": "node-boilerplate",
  "version": "0.1.2",
  "description": "A minimal Node boilerplate built with ES6 + Webpack",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "prebuild": "npm run test && npm run build:clean",
    "build:clean": "rimraf dist/*",
    "build": "webpack --config config/webpack/dev.js --no_type_check",
    "test": "mocha-webpack --opts config/test/mocha-webpack.opts",
    "test:watch": "npm run test -- --watch",
    "dev": "nodemon",
    "migrate": "gestalt migrate --url postgres://localhost/gestalt_clp --glob src/**/mutations.js",
    "deploy": "better-npm-run deploy"
  },
  "betterScripts": {
    "deploy": {
      "command": "npm run build:clean && npm run build && echo 'Project built but missing deploy instructions, check package.json'",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/slightlytyler/node-boilerplate"
  },
  "keywords": [
    "Node",
    "Boilerplate",
    "ES6",
    "Webpack",
    "Babel"
  ],
  "author": "Tyler Martinez",
  "license": "MIT",
  "dependencies": {
    "bcrypt-as-promised": "^1.1.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "gestalt-postgres": "^0.0.17",
    "gestalt-server": "^0.0.17",
    "import-all": "^1.0.1",
    "lodash": "^4.13.1",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.9",
    "chai": "^3.5.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.8.0",
    "flow-bin": "^0.27.0",
    "flow-status-webpack-plugin": "^0.1.5",
    "mocha": "^2.5.3",
    "mocha-webpack": "^0.4.0",
    "nodemon": "^1.9.2",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.4.0",
    "webpack": "^1.13.1",
    "webpack-node-externals": "^1.2.0",
    "yargs": "^4.7.1"
  },
  "metadata": {
    "graphql": {
      "schema": "./schema.json"
    }
  }
}
