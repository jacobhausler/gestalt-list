{
  "verbose": false,
  "watch": [
    "src",
    "webpack.config.js",
    "webpack.test.config.js",
    ".babelrc",
    ".eslintrc",
    ".test.eslintrc",
    "mocha-webpack.opts"
  ],
  "exec": "webpack --config config/webpack/dev.js && npm start",
  "ignore": [
    "dist/",
    "node_modules/",
    ".tmp/",
    "**/test.js"
  ],
  "ext": "js, json"
}